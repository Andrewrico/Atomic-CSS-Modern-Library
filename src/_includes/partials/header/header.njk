<header class="col(-1)"> 
    <div class="D(flex) Fwp(wrap) Jc(sb) Ai(c) W(100%)">  
        <span class="D(flex) Ai(c) Ff(1) Fs(24x) Bdt(0) Pt(1m) Pb(1m)">
            <img src="/images/atomic.svg" alt="Logo" width="50" height="50"> {{ site.name }}
        </span>
        <div class="D(flex) Ai(c) Jc(sb) Mnw(100x)">
            <div id="(mode)">

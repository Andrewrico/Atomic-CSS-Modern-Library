<aside class="Bg(white)">  
{% if navigation.items %}
    <nav>
        <ul>
        {% for item in navigation.items %}
            {% set relAttribute = '' %}
            {% if item.rel %}
                {% set relAttribute = ' rel="' + item.rel + '"' %}
            {% endif %}
            {% set currentAttribute = '' %}
            {% if page.url == item.url %}
                {% set currentAttribute = ' aria-current="page"' %}
            {% endif %}
            <li>
                <a  class="Fs(15x)" href="{{ item.url }}"{{ relAttribute | safe }}{{ currentAttribute | safe }}>{{ item.text }}</a>
            </li>
        {% endfor %}
        </ul>
    </nav>
{% endif %}     
</aside>
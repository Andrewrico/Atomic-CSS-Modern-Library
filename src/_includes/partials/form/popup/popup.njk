{% set css %}
  {% include "./popup.css" %}
{% endset %}
<style>
  {{ css | cssmin | safe }}
</style>

<form 
   class="form-popup" 
   id="formPopup" 
   name="form_popup" 
   method="POST"
   data-netlify="true" 
   data-netlify-honeypot="bot-field"
   >

      <p style="position:relative;" id="response"></p>Â Â 

      <input type="hidden" name="form-name" value="form_contact" />
      <input type="hidden" name="Email-List" value="{{ site.name }}" />

      <label for="name" class="hidden-by-ux">Your Name</label>
      <input 
         type="text"
         name="name" 
         placeholder="John Doe"
         minlength="2" 
         maxlength="32"
         title="Name"
         required
      />

      <label for="email" class="hidden-by-ux">Your E-mail</label>
      <input 
         type="email"
         name="email"  
         placeholder="john@mail.com"
         minlength="6" 
         maxlength="32"
         title="Email"
         required
         pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$"
      />
      <button id="submitButton" class="button button-1" type="submit" onclick="handleValidation()">Subscribe  &#8594;</button>
</form>

{% set js %}
  {% include "./popup.js" %}
{% endset %}
<script>
  {{ js | jsmin | safe }}
</script>
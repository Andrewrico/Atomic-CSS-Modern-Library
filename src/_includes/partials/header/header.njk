                    <rect x="0" y="277.333" width="384" height="42.667"/>
                    <rect x="0" y="170.667" width="384" height="42.667"/>
                    <rect x="0" y="64" width="384" height="42.667"/>
                </svg>
                <svg width="24" height="24" id="iconClose" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                    <line x1="10" y1="10" x2="100" y2="100" stroke="var(--atomic-primary)" stroke-width="10" />
                    <line x1="100" y1="10" x2="10" y2="100" stroke="var(--atomic-primary)" stroke-width="10" />
                </svg>
            </label>
        </div>
    </div>
</header>



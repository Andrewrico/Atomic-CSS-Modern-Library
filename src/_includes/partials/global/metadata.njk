{% set pageTitle = title + ' - ' + site.name %}
{% set pageDesc = '' %}
{% set siteTitle = site.name %}
{% set currentUrl = site.url + page.url %}
{% if metaDesc %}
  {% set pageDesc = metaDesc %}
{% endif %}


<!-- Must -->
<title>{{ pageTitle }}</title>
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="keywords" content="{{ keywords }}" />

<!-- Social Meta  -->
<meta property="og:site_name" content="{{ siteTitle }}" />
<meta property="og:title" content="{{ pageTitle }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="{{ currentUrl }}" />

{% if metaDesc %}
  <meta name="description" content="{{ metaDesc }}" />
  <meta name="twitter:description" content="{{ metaDesc }}" />
  <meta property="og:description" content="{{ metaDesc }}" />
{% endif %}

{% if socialImage %}  
  <meta property="og:image" content="{{ socialImage }}" />
  <meta name="twitter:image" content="{{ socialImage }}" />
  <meta property="og:image:alt" content="Page image for {{ site.name }}" />
  <meta name="twitter:image:alt" content="Page image for {{ site.name }}" />
{% endif %}

{# {% if site.authorHandle %}
  <meta name="twitter:creator" content="@{{ site.authorHandle | replace('@', '') }}" />
{% endif %} #}

  <link rel="icon" href="{{ site.faviconPath }}" type="image/png" />
  <link rel="canonical" href="{{ currentUrl }}" />
  <link rel="alternate" href="{{ site.url }}/feed.xml" type="application/rss+xml" title="{{ site.title }}"/>

  {#  animated Is Available #}
  {% if animatedIsAvailable %}
      <link rel="stylesheet" href="{{ animatedIsAvailable }}" type="text/css">
  {% endif %}
  {#  jquery Is Available #}
  {% if jqueryIsAvailable %}
      <script src="{{ jqueryIsAvailable }}"></script>
  {% endif %}



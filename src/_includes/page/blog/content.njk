{% extends 'layouts/theme.njk' %}
{% set pageType = 'Page' %}
{% block content %}
    <section>
      <div class="D(flex) Fwp(wrap) Mxw(1024x)">

        <div class="F(colspan)">
          {% include "partials/post/post-list.njk" %}
        {% include "partials/post/pagination.njk" %}
        </div>

        <div class="F(column)">
          <nav class="P(1m) sticky" aria-label="Secondary Menu"> 
            <h3>Table of Content</h3>
            <ul>
            {% for item in navigation.items %}
                <li>
                    <a class="Fs(14x)"
                    href="{{ item.url }}"}>{{ item.text }}</a>
                </li>
            {% endfor %}
            </ul>
          </nav>
        </div>

      </div>
    </section>
{% include "./assets.njk" %} 
{% endblock %}
